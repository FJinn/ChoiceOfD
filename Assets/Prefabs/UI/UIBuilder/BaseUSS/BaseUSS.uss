.baseButton {
    flex-basis: 100%;
    font-size: 25px;
    -unity-font-style: bold;
    background-color: rgba(188, 188, 188, 0);
}

.baseButton:hover {
    transition-property: background-color;
    transition-duration: 0.2s;
    scale: 1.2 1.2;
    background-color: rgba(255, 255, 255, 0.45);
}

.baseButton:active {
    background-color: rgb(196, 238, 255);
}
